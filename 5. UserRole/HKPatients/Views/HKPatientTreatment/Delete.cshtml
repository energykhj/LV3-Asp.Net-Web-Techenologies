@model HKPatients.Models.PatientTreatment
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = $"Delete a Treatment for {Context.Session.GetString("DName")}, Patient: {Context.Session.GetString("FullName")}";
}

    <h1>Delete a Treatment for @Context.Session.GetString("DName")</h1>
<h2>Patient: @Context.Session.GetString("FullName")  </h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePrescribed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePrescribed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd class="col-sm-10">
            <span style="white-space: pre-line">@Html.DisplayFor(model => model.Comments)</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientDiagnosis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientDiagnosis.PatientDiagnosisId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Treatment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Treatment.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PatientTreatmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
